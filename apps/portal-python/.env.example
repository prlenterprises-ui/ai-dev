# AI Dev Portal - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenRouter - Unified access to multiple LLM providers (recommended)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Individual Provider Keys (optional, if not using OpenRouter)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Server Configuration
# ============================================================================

# Server
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development  # development, staging, production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Database (Optional - for future use)
# ============================================================================

DATABASE_URL=sqlite:///./portal.db

# ============================================================================
# Storage
# ============================================================================

# File Upload Settings
UPLOAD_DIR=/tmp/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================================================
# AI Service Configuration
# ============================================================================

# Ollama (for local models)
OLLAMA_HOST=http://localhost:11434

# Council Configuration
COUNCIL_TIMEOUT=120  # seconds
COUNCIL_MAX_RETRIES=3

# ============================================================================
# Security
# ============================================================================

# API Keys for securing endpoints (optional)
API_KEY_HEADER=X-API-Key
# API_KEY=your_secure_api_key_here

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_COUNCIL=true
ENABLE_RESUME_MATCHING=true
ENABLE_JOBBERNAUT=true
ENABLE_FILE_UPLOADS=true
