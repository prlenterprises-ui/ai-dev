# Production Environment Variables

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server
HOST=0.0.0.0
PORT=8000

# CORS - Update with your production domains
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Keys - REQUIRED
OPENROUTER_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here
ANTHROPIC_API_KEY=your_key_here

# Database - Use PostgreSQL in production
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/portal

# Storage
UPLOAD_DIR=/var/lib/portal/uploads
OUTPUT_DIR=/var/lib/portal/outputs
MAX_UPLOAD_SIZE=10485760

# Security
API_KEY=your_secure_api_key_here
API_KEY_HEADER=X-API-Key

# Feature Flags
ENABLE_COUNCIL=true
ENABLE_RESUME_MATCHING=true
ENABLE_JOBBERNAUT=true
ENABLE_FILE_UPLOADS=true

# LLM Council Configuration
COUNCIL_MODELS=openai/gpt-4o,anthropic/claude-3-5-sonnet,anthropic/claude-3-5-haiku,google/gemini-2.0-flash-exp
CHAIRMAN_MODEL=google/gemini-2.0-flash-thinking-exp
COUNCIL_TIMEOUT=120
COUNCIL_MAX_RETRIES=3

# Ollama (optional - for local models)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2
